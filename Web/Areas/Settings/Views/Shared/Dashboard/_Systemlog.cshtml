@using Cats.Helpers


<div id="syslogHeader" class="portlet-title">
    <div class="caption font-green-sharp">
        <span class="caption-subject bold uppercase"> @Html.Translate("System Log")</span>
    </div>
</div>

<div id="syslogContent" class="portlet-body">
    <ul>
        <li>
            <a href="@Url.Action("Index", "Log", new {Area = "Settings"})" class="shortcut">

                <span class="shortcut-label">Error Log</span>
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index", "UserActivity", new {Area = "Settings"})" class="shortcut">
                <span class="shortcut-label">Audit Log</span>
            </a>
        </li>
        <li>
            <a href="@Url.Action("", "", new {Area = "EarlyWarning"})" class="shortcut">
                <span class="shortcut-label">Help</span>
            </a>
        </li>
    </ul>
</div>

<script>
    $("#syslogHeader").click(function () {
        $("#syslogContent").slideToggle("slow", "linear");
    });
</script>