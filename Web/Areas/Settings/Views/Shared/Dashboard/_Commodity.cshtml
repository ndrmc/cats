                <span class="shortcut-label">Commodity Source</span>
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Program", new {Area = "Settings"})" class="shortcut">
                <span class="shortcut-label">Program</span>
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Donor", new {Area = "Settings"})" class="shortcut">
                <span class="shortcut-label">Donors</span>
            </a>
        </li>
        <li>
            <a href="@Url.Action("Index", "Unit", new {Area = "Settings"})" class="shortcut">
                <span class="shortcut-label">Units</span>
            </a>
        </li>
    </ul>
</div>

<script>
    $("#commodHeader").click(function () {
        $("#commoContent").slideToggle("slow", "linear");
    });
</script>
