@using Cats.Helpers

<div id="transdHeader" class="portlet-title">
    <div class="caption font-green-sharp">
        <span class="caption-subject bold uppercase"> @Html.Translate("Transaction and Journals")</span>
    </div>
</div>
<div id="transContent" class="portlet-body">
    <ul>
        <li>
            <a href="@Url.Action("", "", new { Area = "EarlyWarning" })" class="shortcut">
                <span class="shortcut-label">Journal</span>
            </a>
        </li>
        <li>
            <a href="@Url.Action("", "", new { Area = "EarlyWarning" })" class="shortcut">
                <span class="shortcut-label">Ledger</span>
            </a>
        </li>
    </ul>
</div>

<script>
    $("#transdHeader").click(function () {
        $("#transContent").slideToggle("slow", "linear");
    });
</script>
