@using Cats.Helpers

@{
    ViewBag.Title = Html.Translate("Index");
    //const string PAGE_NAME = "PSNP.Index";
    Layout = "~/Views/Shared/NewTheme _MainLayout.cshtml";
    //Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.PageTitle = "PSNP Dashboard";
