@model Cats.Models.Hubs.Store
@using Cats.Web.Hub.Helpers
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <table width="400px">
        @Html.HiddenFor(model => model.StoreID)
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Number, Html.Translate("Store Number")) <span class="required">*</span>
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Number)
                    @Html.ValidationMessageFor(model => model.Number)
                </div>
            </td>
            <td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.Name, Html.Translate("Store Name")) <span class="required">*</span>
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </td>
            <td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.HubID, Html.Translate("Hub Name")) <span class="required">*</span>
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.DropDownList("HubID")
                    @Html.ValidationMessageFor(model => model.HubID)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.IsTemporary, Html.Translate("Temporary"))
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @* @Html.EditorFor(model => model.IsTemporary)   *@
                    @Html.CheckBox("IsTemporary", Model.IsTemporary != null && (bool)Model.IsTemporary)
                    @Html.ValidationMessageFor(model => model.IsTemporary)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.IsActive, Html.Translate("Active"))
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @*@Html.EditorFor(model => model.IsActive)*@
                    @Html.CheckBox("IsActive", Model.IsActive != null && (bool)Model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.IsActive, Html.Translate("Stack count"))
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.StackCount)
                </div>
            </td>
        </tr>
        <tr>
            <td>
                <div class="editor-label">
                    @Html.LabelFor(model => model.StoreManName, Html.Translate("Store Man Name"))
                </div>
            </td>
            <td>
                <div class="editor-field">
                    @Html.EditorFor(model => model.StoreManName)
                </div>
            </td>
        </tr>
    </table>
}
