@model Cats.Models.Hubs.ViewModels.ReceiveViewModel
@using Cats.Web.Hub.Helpers
@{
    ViewBag.Title = Html.Translate("New / Edit Receipt");
}
<div>
    <script src="@Url.Content("~/Scripts/HubScripts/utility.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/HubScripts/receive.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


    @Html.Partial("DisplayHub")

    <p>
        <span class="required">*</span> @Html.Translate("Marks all the fields that are required to create / edit a receipt.")
        @Html.Translate(" Please fill all the fields marked with ")<span class="required">*</span>.
    </p>

    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <div id="receive_partial">
            @Html.Partial("_ReceivePartial")
        </div>
        <div id="auditDialog"></div>
    }
</div>

<div>
    @*  "Index", "Receive",*@
    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "receiveDetail" }))
    {
        @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.ReceiveDetails.FirstOrDefault().CommodityID)@*<br/>
            @Html.ValidationMessageFor(model => model.ReceiveDetails.FirstOrDefault().CommodityID)*@


        @Html.HiddenFor(model => model.ReceiveDetails.FirstOrDefault().UnitID)@*<br/>
            @Html.ValidationMessageFor(model => model.ReceiveDetails.FirstOrDefault().UnitID)*@


        @Html.HiddenFor(model => model.ReceiveDetails.FirstOrDefault().SentQuantityInUnit)@*<br/>
            @Html.ValidationMessageFor(model => model.ReceiveDetails.FirstOrDefault().SentQuantityInUnit)*@

        @Html.HiddenFor(model => model.ReceiveDetails.FirstOrDefault().ReceivedQuantityInUnit)@*<br/>
            @Html.ValidationMessageFor(model => model.ReceiveDetails.FirstOrDefault().ReceivedQuantityInUnit)*@


        @Html.HiddenFor(model => model.ReceiveDetails.FirstOrDefault().SentQuantityInMT)@*<br/>
            @Html.ValidationMessageFor(model => model.ReceiveDetails.FirstOrDefault().SentQuantityInMT)*@


        @Html.HiddenFor(model => model.ReceiveDetails.FirstOrDefault().ReceivedQuantityInMT)@*<br/>
            @Html.ValidationMessageFor(model => model.ReceiveDetails.FirstOrDefault().ReceivedQuantityInMT)*@
        @*
            @Html.HiddenFor(model => model.ReceiveDetails.FirstOrDefault().CommodityGradeID)
            @Html.ValidationMessageFor(model => model.ReceiveDetails.FirstOrDefault().CommodityGradeID)  *@
    }

</div>