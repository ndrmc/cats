@model System.String
@*@Html.DropDownListFor(com => com, new SelectList((System.Collections.IEnumerable)ViewData["Commodities"],"Name", "Name"))*@
@(Html.Telerik().ComboBox()
                            .Name("CommodityId")
                            .AutoFill(true)
                             .BindTo(new SelectList((System.Collections.IEnumerable)ViewData["Commodities"], "Id", "Name"))
                            .Filterable(filtering =>
                            {
                                filtering.FilterMode(AutoCompleteFilterMode.StartsWith);
                            })
                            .HighlightFirstMatch(true)
                            .AutoFill(true)
                            .OpenOnFocus(true)
                    )

