        </tr>

        <tr>        <td>
        <div class="editor-label">
            @Html.LabelFor(model => model.IsActive, Html.Translate("Active"))
        </div></td><td>
        <div class="editor-field">
            @* @Html.EditorFor(model => model.IsActive) *@
            @Html.CheckBoxFor(model => model.IsActive)
