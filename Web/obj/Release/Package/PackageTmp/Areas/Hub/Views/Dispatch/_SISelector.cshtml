@using Cats.Helpers

@model Cats.Areas.GiftCertificate.Models.GiftCertificateViewModel
<div class="modal-dialog modal-sm">
    <div class="modal-content">

        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
            <h4 id="myModalLabel" class="modal-title">@Html.Translate("Select New SI Number ")</h4>
        </div>

        @using (Html.BeginForm("Reject", "GiftCertificate", FormMethod.Post, new { @class = "modal-form" }))
        {
            @Html.ValidationSummary()

            <div class="modal-body">
                @Html.HiddenFor(model => model.GiftCertificateID)
                <p>
                    @Html.Translate("Are you sure you want to Reject?")
                </p>

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" type="submit"> @Html.Translate("Change")</button>
                <button class="btn" data-dismiss="modal" aria-hidden="true"> @Html.Translate("Cancel")</button>
            </div>

        }
    </div>
</div>


