@using Cats.Helpers
@model Cats.Areas.EarlyWarning.Models.AddCommodityViewModel


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">@Html.Translate("Add Commodity")</h3>
</div>

@using (Html.BeginForm("AddCommodity", "Request",FormMethod.Post, new { @class = "modal-form"}))
{
    @Html.HiddenFor(m=>m.RegionalRequestID)
    <div class="modal-body">
        <div class="form-horizontal">
            <div class="control-group">
                <div class="control-label">
                    @Html.Label(Html.Translate("Commodity"))
                </div>
                <div class="controls">
                    @Html.DropDownList("CommodityID")
                    @Html.ValidationMessageFor(m => m.CommodityID)
                   @* <input type="button" value="Add All Commodities" onclick="javascript: addAllCommodities();"/>*@
                     @*<button type="button" onclick="addAllCommodities()">Add All Commodities</button>*@
                </div>
              
            </div>
            

        </div>
    </div>

     
    <div class="modal-footer">
        
                 <label> Create For All commodities?
                 @Html.CheckBoxFor(m=>m.ChkAllCommodities)</label>
                     
        <button class="btn btn-primary" value="add" >Save</button>
        <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    </div>

}

