
@using Cats.Helpers
@using LanguageHelpers.Localization
@model Cats.Models.Plan




    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">IDPS Plan Information</h3>
    </div>

    @using (Html.BeginForm("CreateRequisitionForIDPS", "ReliefRequisition", new { _programId = @ViewBag.programId }, FormMethod.Post, new { @class = "modal-form" }))
    {
    
        @Html.HiddenFor(m=>m.PlanID)
        <div class="modal-body">
        
            <div class="form-horizontal">
            
                <div class="control-group" id="PlanName">
                    <div class="control-label">
                        @Html.Label(Html.Translate("plan"))
                    </div>
                    <div class="controls" id="div_region">
                        @Html.TextBoxFor(m => m.PlanName)
                        @Html.ValidationMessageFor(m => m.PlanName)
               
                    </div>

                </div>

                <div class="control-group">
                    <div class="control-label">
                        @Html.Label(Html.Translate("start Date"))
                    </div>
                    <div class="controls" >
                        @Html.TextBoxFor(m=>m.StartDate,new { @class = "cats-date-pref" })
                        @Html.ValidationMessageFor(m => m.StartDate)
               
                    </div>

                </div>

                <div class="control-group">
                    <div class="control-label">
                        @Html.Label(Html.Translate("End Date"))
                    </div>
                    <div class="controls" >
                        @Html.TextBoxFor(m=>m.EndDate,new { @class = "cats-date-pref" })
                        @Html.ValidationMessageFor(m => m.EndDate)
               
                    </div>

                </div>
            
            </div>
        </div>

        <div class="modal-footer"> <button class="btn btn-primary" type="submit">Save</button>
            <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
       
        </div>

    }


