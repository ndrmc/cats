<div class="portlet bordered light">
    <div class="portlet-title">
        <div class="caption font-green-sharp">
            <i class="fa fa-envelope font-green-sharp"></i>
            <span class="caption-subject bold uppercase"> @Html.Translate("Transport Bid Plan")</span>
            <span class="caption-helper">  </span>
        </div>
        <div class="actions">
            @*<a href="javascript:;" class="btn btn-circle btn-default">
                    <i class="fa fa-pencil"></i> Edit
                </a>*@
            <a class="btn  btn-circle btn-default blue-stripe toolbar-btn" data-buttontype="btn_save" data-submittedform="frm_edit_bid" title="@Html.Translate("save")">
                <i class="fa fa-save"></i> @Html.Translate("Save")
            </a>

            <a class="btn btn-circle btn-default green-stripe toolbar-btn" href="@Url.Action("Create", "TransportBidPlan")">
                <i class="fa fa-plus-circle "></i> @Html.Translate("New Bid Plan")
            </a>
            <div class="btn-group">
                <a class="btn btn-circle btn-default  btn-sm" href="javascript:;" data-toggle="dropdown">
                    <i class="fa fa-user"></i> @Html.Translate("Actions") <i class="fa fa-angle-down"></i>
                </a>
                <ul class="dropdown-menu pull-right">
                    <li>
                        <a>
                            <i class="fa fa-print"></i> @Html.Translate("Print")
                        </a>
                    </li>
                    <li>
                        <a>
                            <i class="fa fa-share"></i> @Html.Translate("Export")
                        </a>
                    </li>
                </ul>
            </div>

            <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title="">
            </a>
        </div>
        @*<div class="tools">
                <a href="javascript:;" class="collapse"></a>
            </div>*@
    </div>
    <div class="portlet-body">
        @using (Html.BeginForm("Create", "TransportBidPlan", FormMethod.Post, new { id = "frm_edit_bid", @class="form-horizontal"}))
        {
            @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="col-md-3 control-label" for="Name"> @Html.LabelFor(model => model.Year, Html.Translate("Year"))</label>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.Year, new { @class = "form-control", @placeholder = "Year" })
                        @Html.ValidationMessageFor(model => model.Year)
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-3 control-label" for="YearHalf"> @Html.LabelFor(model => model.YearHalf, Html.Translate("Year Half"))</label>
                    <div class="col-md-2">
                        @Html.TextBoxFor(model => model.YearHalf, new { @class = "form-control", @placeholder = "Year Half" })
                        @Html.ValidationMessageFor(model => model.YearHalf)
                    </div>
                </div>
        }
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
