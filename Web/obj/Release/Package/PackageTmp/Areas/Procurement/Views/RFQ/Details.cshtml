@{

    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/NewTheme _MainLayout.cshtml";
    //Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewBag.PageTitle = "REQUEST FOR QUOTATION";
    ViewBag.PageTitleDescription = "";
}
