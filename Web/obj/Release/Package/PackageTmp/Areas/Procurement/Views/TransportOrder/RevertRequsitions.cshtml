@using Cats.Helpers
@model List<Cats.Areas.Procurement.Models.RevertRequsitionsViewModel>
@{
    ViewBag.Title = "RevertRequsitions";
    const string pageName = "Procurement.TransportOrder.RevertRequsitions";
}
<div class="modal-dialog">
    <div class="modal-content">


        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 id="myModalLabel">@Html.Translate2(pageName, "List of Requsitions to be reverted")</h4>
        </div>

        @using (Html.BeginForm("RevertRequsitions", "TransportOrder", FormMethod.Post))
        {
            <div class="modal-body">
                <table class="table table-striped table-condensed">

                    <thead>
                        <tr>
                            <th>Action</th>
                            <th> No.</th>
                            @* <th>TransporterID</th>*@
                            <th>Requsition No</th>
                            <th>Zone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @*  @{ int index = 0; }*@
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            //var id = item.Checked;
                            <tr>
                                @{var sno = i + 1;}
                                <td>
                                    <div class="md-checkbox">
                                        @Html.CheckBox("revertRequsitionsViewModels[" + @i + "].Checked", Model[i].Checked, new { @class = "md-check" })
                                        <label for="revertRequsitionsViewModels_@{ @i;}__Checked">
                                            <span></span>
                                            <span class="check"></span>
                                            <span class="box"></span>
                                        </label>
                                    </div>

                                </td>
                                <td>@sno</td>
                                @Html.Hidden("revertRequsitionsViewModels[" + @i + "].RequsitionID",
                                       Model[i].RequsitionID,
                                       new { @readonly = "readonly" })
                                <td>
                                    @Html.Label("revertRequsitionsViewModels[" + @i + "].RequsitionNumber",
                                      Model[i].RequsitionNumber,
                                      new { @readonly = "readonly" })
                                </td>
                                <td>
                                    @Html.Label("revertRequsitionsViewModels[" + @i + "].Zone",
                                       Model[i].Zone,
                                       new { @readonly = "readonly" })
                                </td>

                            </tr>

                            @* @Html.HiddenFor(model=>item.TransportOrderID)
                                <td>@item.TransportOrderID</td>
                                @Html.HiddenFor(model=>item.ContractNumber)
                                <td>@item.ContractNumber</td>
                                @Html.HiddenFor(model=>item.TransportOrderNo)
                                <td>@item.TransportOrderNo</td>
                                @Html.HiddenFor(model=>item.Transporter)
                                <td>@item.Transporter</td>
                                @Html.HiddenFor(model=>item.Checked)*@


                        }
                    </tbody>

                </table>
            </div>@*
                <tr>*@
            @* <td colspan="3">*@
            <div class="modal-footer">
                <button class="btn green" type="submit">Revert</button>
                <a class="btn red" data-dismiss="modal" aria-hidden="true">Cancel</a>
            </div>
            @*     </td>
                </tr>*@
        }
    </div>
</div>