
@using Cats.Helpers
@model IEnumerable<Cats.Models.TransportOrderDetail>

@{
    ViewBag.Title =@Html.Translate("TransportOrderDetail");
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<fieldset>
    <legend>
       @Html.Translate("Transport Order Detail view")
    </legend>
</fieldset>


<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayName(@Html.Translate("Transport Order Id"))
        </th>
        <th>
            @Html.DisplayName(@Html.Translate("From Warehouse"))
        </th>
        <th>
            @Html.DisplayName(@Html.Translate("Qty Qtl"))
        </th>
        <th>
            @Html.DisplayName(@Html.Translate("Distance"))
        </th>
        
        <th>
            @Html.DisplayName(@Html.Translate("RequisitionID"))
        </th>
        <th>
            @Html.DisplayName(@Html.Translate("Commodity"))
        </th>
        <th>
            @Html.DisplayName(@Html.Translate("Zone"))
        </th>
        
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TransportOrderID)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Hub.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantityQtl)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.TariffPerQtl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RequisitionID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReliefRequisition.Commodity.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReliefRequisition.AdminUnit.Name)
        </td>
       
        
    </tr>
}

</table>
