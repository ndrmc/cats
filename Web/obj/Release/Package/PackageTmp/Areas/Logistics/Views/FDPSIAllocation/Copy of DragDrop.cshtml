    .list-zone
    {
        padding-left: 0px;
        font-size: 14px;
    }

    .list-woreda
    {
        padding-left: 20px;
    }

    .list-fdp
    {
        padding-left: 40px;
    }

    .admin-list
    {
        line-height: 30px;
        padding-left: 5px;
    }

        .admin-list:hover
        {
            background: #EEE;
        }
</style>
